<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://baconcoffeemama.com/wp-content/uploads/2018/04/Small-House-Big-Garage-Car.jpg');">
  <section id="profile-cars" class="pb-5">
    <div class="container">
     <h5 class="section-title h1">Welcome to your garage, <%= current_user.first_name %></h5>
     <div class="row">
      <% @cars.each do |car| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <% if car.photos.first == nil  %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://www.cookandreevesvans.com/static/img/default-car.jpg');">
        <% else %>
        <div class="card" style="background-image: url('<%= cl_image_path car.photos.first.picture %>');">
        <% end %>
          <div class="card-body text-center">
            <p class="card-text"><%= car.year %> <%= car.color %> <%= car.model %> <%= car.brand %> in <%= car.location %></p>
          </div>
          <div class="card-footer">
              <%= link_to edit_car_path(car.id), class: "edit-car" do %>
              <i class="far fa-edit" style="color:white"> Edit</i>
              <% end %>
              <h4 class="card-title"><%= link_to "Pending Bookings", profile_my_trips_path %></h4>
              <%= link_to "Delete", car_path(car),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "delete-car" %>
            </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>
</div>
