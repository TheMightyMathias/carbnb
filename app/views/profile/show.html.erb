<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.visitcalifornia.com/sites/default/files/styles/welcome_image/public/VCW_TI_6_Hero_CC_BigSur_coast_TS_1280x642_0.jpg');">
  <div class="container container-profile">
    <div class="row container-profile">
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to "My Cars", profile_my_cars_path, class: "btn btn-navigation" %>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to "My Trips", profile_my_trips_path, class: "btn btn-navigation" %>
      </div>
    </div>
  </div>

   <div class="bio-image">
              <% if @user.photo.blank? %>
              <img src='https://www.freeiconspng.com/uploads/user-login-icon-14.png' style="height:150px;">
              <% else %>
              <%= cl_image_tag @user.photo, height: 300, width: 400 %>
              <% end %>
            </div>


<div class="container portfolio">

    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-12">
 <h6>
          First Name: <%= @user.first_name %><br>
          Last Name : <%= @user.last_name %><br>
          Phone Number : <%= @user.phone_number %><br>
          Email : <%= @user.email %><br>
          </h6>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bio-content">
          <h3><%= @user.username %></h3>
          <div>
            <%= link_to edit_user_registration_path(current_user) do %>
              <i class="far fa-edit"> Edit Profile</i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


