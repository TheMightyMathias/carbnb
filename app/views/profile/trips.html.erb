        <h3><%= booking.car.title %></h3>
        <ul>
        <li>Start Date: <%= booking.start_date %> </p>
        <li>Start Date: <%= booking.end_date %> </p>

        <li>Owner : <%= booking.car.user.email %></p>
        <li>Booking Confirmed : <%= booking.validated %></p>
        <%= link_to booking_path(booking.id) do %>
          <li>See Details</li>
        <% end %>
      </ul>
      </div>
      </div>
    <% end %>
  </div>
